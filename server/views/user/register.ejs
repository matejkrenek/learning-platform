<div class="authContainer">
    <div class="authContainer__header">
        <h1 class="section--h2">Registrace</h1>
        <p>Už máte účet? <a href="/user/login">Přihlaste se</a></p>
    </div>
    <form method="POST">
        <%- include("../partials/messages") %>
        <div class="inputContainer__half">
            <div class="inputContainer">
                <label for="first">Jméno</label>
                <input type="text" name="first" id="first" value="<%= typeof first !== "undefined" ? first : "" %>">
            </div>
            <div class="inputContainer">
                <label for="last">Přijmení</label>
                <input type="text" name="last" id="last" value="<%= typeof last !== "undefined" ? last : "" %>">
            </div>
        </div>
        <div class="inputContainer">
            <label for="email">E-mailová Adresa</label>
            <input type="email" name="email" id="email" value="<%= typeof email !== "undefined" ? email : "" %>">
        </div>
        <div class="inputContainer__half">
            <div class="inputContainer">
                <label for="password">Heslo</label>
                <input type="password" name="password" id="password">
            </div>
            <div class="inputContainer">
                <label for="password2">Heslo Znovu</label>
                <input type="password" name="password2" id="password2">
            </div>
        </div>
        <div class="buttonContainer">
            <input type="submit" class="btn btn--green btn--filled" value="Zaregistrovat se">
        </div>
    </form>
</div>