<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Název</th>
            <th>Obtížnost</th>
            <th>Požadavky</th>
            <th>Description</th>
            <th>Obrázek</th>
            <th>cta1</th>
            <th>cta2</th>
        </tr>
    </thead>
    <tbody>
        <% courses.forEach(course => { %>
            <tr>
                <td><%= course._id %></td>
                <td><%= course.title %></td>
                <td><%= course.difficulty %></td>
                <td><%= course.requirements %></td>
                <td><%= course.description %></td>
                <td><img src="<%= course.previewImage %>" alt="" class="small--img"></td>
                <td><a href="course/<%= course._id %>/sections">Zobrazit sekce</a></td>
                <td><a href="create/course/<%= course._id %>/section">Vytvořit sekci</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>